<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Lista de Pedidos</title>
</head>
<body>
    <h1>Pedidos</h1>
    <a href="/pedidos/new">Novo Pedido</a>
    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome do Produto</th>
                <th>Quantidade</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% if (pedidos && pedidos.length > 0) { %>
                <% pedidos.forEach(function(pedido) { %>
                    <tr>
                        <td><%= pedido.id %></td>
                        <td><%= pedido.nome_produto %></td>
                        <td><%= pedido.quantidade %></td>
                        <td>R$ <%= pedido.preco %></td>
                        <td>
                            <a href="/pedidos/<%= pedido.id %>">Ver</a>
                            <a href="/pedidos/<%= pedido.id %>/edit">Editar</a>
                            <form action="/pedidos/<%= pedido.id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Tem certeza que deseja excluir este pedido?');">Excluir</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5">Nenhum pedido encontrado.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>